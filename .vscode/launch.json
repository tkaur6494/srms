    "version": "0.2.0",
    "configurations": [
        {
            "command": "move build www && cordova build android",
            "name": "Cordova build android",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run build",
            "name": "Run npm build",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run build && rmdir /s www && move build www && cordova build android",
            "name": "Run android build",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\start"
        },
    ]
}